<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <div class="log-in card">
          <div class="card-header p-0">
            <h2>Create Your Account</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div class="card-body">
                <div class="form-inputs">
                  <%= f.input :email, label: false, placeholder: 'Email',
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email", class: 'form-control mb-2' }%>
                              
                  <%= f.input :user_name, required: true, label: false, placeholder: 'User Name', input_html: { class: 'form-control mb-2' } %>

                  <%= f.input :password, label: false, placeholder: 'Password',
                              required: true,
                              input_html: { autocomplete: "new-password", class: 'form-control mb-2' } %>
                  <%= f.input :password_confirmation, label: false, placeholder: 'Confirm Password',
                              required: true,
                              input_html: { autocomplete: "new-password", class: 'form-control mb-2' } %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Sign up", class: 'btn btn-info btn-block' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



